    .claim__checkbox {
    position: relative;
}

.claim__checkbox-arrow {
    display: none; /* Скрываем стандартный чекбокс */
}

.claim__checkbox-text{ 
    padding-left: 25px; /* Отступ для текста */
    cursor: pointer; /* Указатель при наведении */
    position: relative;

}
.claim__checkbox-text::before{ 
    content: "";
    display: block;
    width: 16px;
    height: 16px;
    border: none;
    position: absolute;
    top: 0; /* Отступ от верха, чтобы по центру */
    left: 0;
    transition: background-color 0.2s; /* Плавный переход */
    background-color: #FFFFFF;
}

.claim__checkbox-arrow:checked + .claim__checkbox-text::before {
    background-color: #C26733; /* Цвет фона при чекбоксе */
    background-image: url('../img/Union.svg'); /* Изображение, которое будет отображаться */
    background-repeat: no-repeat;
    background-size: 12px 12px; /* Масштабируем изображение для нужного размера */
    background-position: center; /* Центрируем изображение */
}
